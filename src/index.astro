---
import MainLayout from '../../layouts/MainLayout.astro';
import NewsCard from '../../components/NewsCard.astro';

// 在实际项目中，这些数据将从数据库、API或者静态文件中获取
const latestNews = [
  {
    title: "网站正式上线",
    slug: "website-launch",
    date: "2025-03-18",
    summary: "我们的信息发布系统今天正式上线，欢迎使用..."
  },
  {
    title: "系统功能介绍",
    slug: "system-features",
    date: "2025-03-17",
    summary: "本系统采用最新的技术栈，提供高效、便捷的信息发布服务..."
  },
  {
    title: "使用指南发布",
    slug: "user-guide",
    date: "2025-03-16",
    summary: "为了帮助用户更好地使用本系统，我们发布了详细的使用指南..."
  }
];
---

<MainLayout title="厦门Fox澳式橄榄球队信息发布系统 - 首页">
  <section class="hero">
    <div class="container">
      <h1>欢迎使用信息发布系统</h1>
      <p>高效、便捷的信息发布与管理平台</p>
    </div>
  </section>

  <section class="latest-news">
    <div class="container">
      <h2>最新发布</h2>
      <div class="news-grid">
        {latestNews.map(news => (
          <NewsCard 
            title={news.title}
            slug={news.slug}
            date={news.date}
            summary={news.summary}
          />
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .hero {
    background-color: #f5f5f5;
    padding: 4rem 1rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.2rem;
    color: #666;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .latest-news h2 {
    border-bottom: 2px solid #ddd;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
</style>